---
export interface Props {
  links: {
    title: string;
    href: string;
  }[];
}

const { links } = Astro.props as Props;
const first = links.shift();
---

<nav>
  <a href={first.href}>{first.title}</a>
  <hr />
  {links.map(({ title, href }) => <a href={href}>{title}</a>)}
</nav>

<style lang="scss">
  @use "../styles/theme";

  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;

    padding: 8px;

    font-size: 1em;
    font-family: theme.$font-serif;

    a {
      margin: 0 12px;

      font-weight: 700;
      font-variant: small-caps;
      text-decoration: none;
      
      color: inherit;

      &[href="/"] {
        font-size: 2em;
        flex-grow: 0;
      }
    }

    hr {
      display: none;
    }
  }

  @media (min-width: 1200px) {
    nav {
      position: absolute;
      top: 0;
      left: 0;

      display: flex;
      flex-direction: column;
      align-items: center;

      margin: 24px;

      font-size: 1.5em;
      text-align: right;

      * {
        margin: 0 12px;
      }

      a {
        width: 100%;

        &[href="/"] {
          text-align: center;
          font-size: 4em;
          line-height: 0.75em;
          margin-bottom: 8px;
        }
      }

      hr {
        width: 100%;
        margin: 0.5em 0;
        display: block;
      }
    }
  }
</style>
