---
import BaseHead from "../components/BaseHead.astro";
import Nav from "../components/Nav.astro";

import "../styles/global.scss";
import "../styles/typography.scss";
import "prism-themes/themes/prism-nord.css";

const { content } = Astro.props;
---

<html lang={content.language ?? "en"}>
  <head>
    <BaseHead title={content.title ?? "Max Niederman"} description={content.description ?? ""} />

    <style lang="scss">
      body {
        overflow-x: hidden;
      }

      .sidebar {
        
      }

      .typography {
        max-width: 80ch;
        margin: auto;
        padding: 0 16px;

        .title {
          margin: 32px 0;
          border-bottom: none;
          text-align: center;
          font-size: 3em;
        }
      }
    </style>
  </head>
  <body>

    <main class="typography">
      <Nav />

      <header>
        <h1 class="title">{content.title}</h1>
      </header>

      <article>
        <slot />
      </article>
    </main>
  </body>
</html>
