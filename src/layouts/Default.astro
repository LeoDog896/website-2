---
import BaseHead from "../components/BaseHead.astro";
import Nav from "../components/Nav.astro";

import "../styles/global.scss";
import "../styles/typography.scss";
import "prism-themes/themes/prism-nord.css";

const { content } = Astro.props;
---

<html lang={content.language ?? "en"}>
  <head>
    <BaseHead title={content.title ?? "Max Niederman"} description={content.description ?? ""} />

    <style lang="scss">
      body {
        overflow-x: hidden;
      }

      .typography {
        max-width: 80ch;
        margin: auto;
        padding: 0 24px;

        .title {
          margin-top: 16px;
          margin-bottom: 32px;
          border-bottom: none;
          text-align: center;
          font-size: 2.75em;
          hyphens: auto;
        }
      }
    </style>
  </head>
  <body>
    <Nav />

    <main class="typography">
      {content.title !== undefined && 
        <header>
          <h1 class="title">{content.title}</h1>
        </header>
      }

      <article>
        <slot />
      </article>
    </main>
  </body>
</html>
