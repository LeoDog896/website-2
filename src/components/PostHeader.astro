---
export interface Frontmatter {
  title: string;
  description: string;
  published: string;
  updated: string;
  status: string;
  tags: string[];
}

export interface Props {
  content: Frontmatter;
}

const {
  title,
  description,
  published,
  updated,
  status,
  tags = [],
} = Astro.props.content;
---

<style lang="scss">
  @use "../../public/styles/theme";

  header {
    font-size: 0.90em;
    font-family: theme.$font-serif;
    font-style: italic;
  }

  p {
    margin: 0.5em 0;
  }

  h1 {
    margin: 0;
    margin-bottom: 16px;

    text-align: center;
    font-variant: small-caps;
    text-align: center;
    font-size: 2.75em;
    hyphens: auto;
  }

  div {
    margin: 0.5em 0;
  }

  .tags {
    a {
      margin-right: 0.25em;
      color: inherit;
    }
  }
</style>

<header>
  <h1>{title}</h1>

  <p>{description}</p>

  <div class="tags">
    {tags.slice(0, -1).map((tag) => 
      <a href={`/tags/${tag}`}>{tag},</a>
    )}
    <a href={`/tags/${tags.slice(-1)}`}>{tags.slice(-1)}</a>
  </div>

  <div class="other">
    published: {published},
    updated: {updated},
    status: {status}
  </div>
</header>
